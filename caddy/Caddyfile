tshomeserv.duckdns.org {
    # Nextcloud (all requests except /home/)
    handle /home/weather* {
        reverse_proxy weather-backend:3000
    }

    handle /home/* {
        reverse_proxy website-weather-api:80
    }

    handle {
        root * /var/www/html
        php_fastcgi app:9000
        file_server
    }
}
